<script>
// Track plugin CTA clicks
document.querySelectorAll('.plugin-cta-link').forEach(link => {
    link.addEventListener('click', function(e) {
        const location = this.dataset.ctaLocation || 'unknown';
        
        if (window.CalcPressAnalytics) {
            window.CalcPressAnalytics.trackPluginClick(location);
        }
        
        if (window.gtag) {
            gtag('event', 'plugin_cta_click', {
                event_category: 'conversion',
                event_label: location,
                value: 5
            });
        }
    });
});
</script>
