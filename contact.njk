---
pagination:
  data: site.languages
  size: 1
  alias: langItem
permalink: "/{% if langItem.code != 'en' %}{{ langItem.code }}/{% endif %}contact/index.html"
---
<!DOCTYPE html>
<html lang="{{ langItem.code }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ ui.contact.title[langItem.code] }} | {{ site.name }}</title>
    <meta name="description" content="{{ ui.contact.intro[langItem.code] }}">
    <meta name="robots" content="index, follow">
    {% set langPrefix = '' if langItem.code == site.defaultLang else '/' + langItem.code %}
    {% set canonicalPath = langPrefix + '/contact' %}
    <link rel="canonical" href="{{ (site.url + canonicalPath) | canonicalUrl }}">
    {%- for altLang in site.languages %}
    {% set altPrefix = '' if altLang.code == site.defaultLang else '/' + altLang.code %}
    <link rel="alternate" hreflang="{{ altLang.code }}" href="{{ (site.url + altPrefix + '/contact') | canonicalUrl }}">
    {%- endfor %}
    <link rel="alternate" hreflang="x-default" href="{{ (site.url + '/contact') | canonicalUrl }}">
    <link rel="icon" type="image/png" href="/assets/images/logo_calculator.png">
    <link rel="stylesheet" href="/assets/css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    {% include "components/language-redirect.njk" %}
</head>
<body>
    <nav class="nav">
        <div class="container">
            <a href="{% if langItem.code == 'en' %}/{% else %}/{{ langItem.code }}{% endif %}" class="logo">
                <img class="logo-mark" src="/assets/images/logo_calculator.png" alt="" aria-hidden="true" style="width: 32px; height: 32px;">
                <span class="logo-type">{{ site.name }}</span>
            </a>
            <div class="nav-links">
                <a href="{% if langItem.code == 'en' %}/{% else %}/{{ langItem.code }}{% endif %}" class="nav-btn">
                     ‚Üê {{ ui.nav[langItem.code].home }}
                </a>
            </div>
        </div>
    </nav>

    <section class="hero page-hero">
        <div class="container content-narrow-sm content-center">
            <h1>{{ ui.contact.title[langItem.code] }}</h1>
            <p class="lead">{{ ui.contact.intro[langItem.code] }}</p>
        </div>
    </section>

    <section class="content-section">
        <div class="container content-narrow-sm">
            <div class="contact-card">
                <div style="font-size: 48px; margin-bottom: 24px;">üìß</div>
                <h2 style="font-size: 24px; margin-bottom: 16px;">{{ ui.contact.emailLabel[langItem.code] }}</h2>
                <a href="mailto:worthit.tuliai@gmail.com" class="contact-email">worthit.tuliai@gmail.com</a>
                <p style="color: var(--text-muted); font-size: 14px; margin-top: 16px;">{{ ui.contact.responseTime[langItem.code] }}</p>
            </div>
        </div>
    </section>

    <footer class="footer">
        <div class="container">
            {% set langPrefix = '' if langItem.code == 'en' else '/' + langItem.code %}
            <ul class="footer-links">
                <li><a href="{{ langPrefix }}/about">{{ ui.about.title[langItem.code] }}</a></li>
                <li><a href="{{ langPrefix }}/resources">{{ ui.resources.title[langItem.code] }}</a></li>
                <li><a href="{{ langPrefix }}/contact">{{ ui.contact.title[langItem.code] }}</a></li>
                <li><a href="{{ langPrefix }}/privacy">{{ ui.footer[langItem.code].privacy }}</a></li>
                <li><a href="{{ langPrefix }}/terms">{{ ui.footer[langItem.code].terms }}</a></li>
            </ul>
            <p style="text-align: center; color: var(--text-muted);">¬© {{ site.year }} {{ site.name }}.</p>
        </div>
    </footer>
    {% include "components/consent-loader.njk" %}
    {% include "components/cookie-banner.njk" %}
</body>
</html>
