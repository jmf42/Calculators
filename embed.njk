<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="robots" content="noindex, nofollow">
    <title>CalcKit Embedded Calculator</title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body { 
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: transparent;
            padding: 12px;
        }
        .calc-embed {
            background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
            border-radius: 12px;
            padding: 24px;
            color: #fff;
            max-width: 100%;
        }
        .calc-embed h3 {
            font-size: 1.1rem;
            margin-bottom: 16px;
            color: #a5b4fc;
        }
        .calc-embed label {
            display: block;
            font-size: 0.85rem;
            color: #94a3b8;
            margin-bottom: 4px;
        }
        .calc-embed input {
            width: 100%;
            padding: 10px 12px;
            border: 1px solid #334155;
            border-radius: 8px;
            background: #0f172a;
            color: #fff;
            font-size: 1rem;
            margin-bottom: 12px;
        }
        .calc-embed input:focus {
            outline: none;
            border-color: #6366f1;
        }
        .calc-result {
            background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
            border-radius: 8px;
            padding: 16px;
            text-align: center;
            margin-top: 8px;
        }
        .calc-result-label {
            font-size: 0.85rem;
            opacity: 0.9;
        }
        .calc-result-value {
            font-size: 1.8rem;
            font-weight: 700;
        }
        .calc-powered {
            text-align: center;
            margin-top: 12px;
            font-size: 0.75rem;
        }
        .calc-powered a {
            color: #a5b4fc;
            text-decoration: none;
        }
        .calc-powered a:hover {
            text-decoration: underline;
        }
        @media (max-width: 480px) {
            body { padding: 8px; }
            .calc-embed { padding: 18px; }
            .calc-embed h3 { font-size: 1rem; }
            .calc-result-value { font-size: 1.5rem; }
        }
    </style>
</head>
<body>
    <div class="calc-embed">
        <h3>üè† Mortgage Calculator</h3>
        
        <label for="embed-price">Home Price ($)</label>
        <input type="number" id="embed-price" value="350000" min="10000" step="5000">
        
        <label for="embed-down">Down Payment ($)</label>
        <input type="number" id="embed-down" value="70000" min="0" step="1000">
        
        <label for="embed-rate">Interest Rate (%)</label>
        <input type="number" id="embed-rate" value="6.5" min="0" max="20" step="0.1">
        
        <label for="embed-years">Loan Term (Years)</label>
        <input type="number" id="embed-years" value="30" min="5" max="40">
        
        <div class="calc-result">
            <div class="calc-result-label">Monthly Payment</div>
            <div class="calc-result-value" id="embed-result">$1,770</div>
        </div>
        
        <div class="calc-powered">
            Powered by <a href="https://calc-kit.com" target="_blank" rel="noopener">CalcKit</a>
        </div>
    </div>
    
    <script>
        function calculate() {
            const price = parseFloat(document.getElementById('embed-price').value) || 0;
            const down = parseFloat(document.getElementById('embed-down').value) || 0;
            const rate = parseFloat(document.getElementById('embed-rate').value) || 0;
            const years = parseFloat(document.getElementById('embed-years').value) || 30;
            
            const principal = price - down;
            const monthlyRate = rate / 100 / 12;
            const n = years * 12;
            
            let payment;
            if (rate > 0) {
                payment = principal * (monthlyRate * Math.pow(1 + monthlyRate, n)) / (Math.pow(1 + monthlyRate, n) - 1);
            } else {
                payment = principal / n;
            }
            
            document.getElementById('embed-result').textContent = '$' + Math.round(payment).toLocaleString();
        }
        
        document.querySelectorAll('.calc-embed input').forEach(input => {
            input.addEventListener('input', calculate);
        });
        
        calculate();
    </script>
</body>
</html>
