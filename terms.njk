---
pagination:
  data: site.languages
  size: 1
  alias: langItem
layout: layouts/legal.njk
title: Terms of Service
permalink: "/{% if langItem.code != 'en' %}{{ langItem.code }}/{% endif %}terms/index.html"
---
{% set lang = langItem.code %}
{% set uiLegal = ui.legal[lang] %}
{% set uiFooter = ui.footer[lang] %}
{% set pageTitle = uiLegal.termsTitle %}
{% set lastUpdatedText = uiLegal.lastUpdated %}

{% set uiTerms = ui.termsPage[lang] %}

{# Override layout variables #}
{% set title = pageTitle %}
{% set description = pageTitle + " - " + site.name %}

<p>{{ uiTerms.intro }}</p>

<h2>{{ uiTerms.s1Title }}</h2>
<p>{{ uiTerms.s1Text }}</p>

<h2>{{ uiTerms.s2Title }}</h2>
<p>{{ uiTerms.s2Text }}</p>
<ul>
    <li>{{ ui.termsContent.freeUseList1[lang] | default("Use our calculators for personal or business planning") }}</li>
    <li>{{ ui.termsContent.freeUseList2[lang] | default("Share calculator links with others") }}</li>
    <li>{{ ui.termsContent.freeUseList3[lang] | default("Access calculators in multiple languages") }}</li>
</ul>

<h2>{{ uiTerms.s3Title }}</h2>
<p><strong>{{ uiTerms.important }}</strong> {{ ui.termsContent.accuracyText[lang] | default("Calculator results are estimates only. They should not be used as the sole basis for financial decisions. Always consult a qualified financial advisor.") }}</p>

<h2>{{ uiTerms.s4Title }}</h2>
<p>{{ ui.termsContent.restrictionsIntro[lang] | default("You may NOT:") }}</p>
<ul>
    <li>{{ ui.termsContent.restrictionsList1[lang] | default("Use the calculators for illegal or abusive purposes") }}</li>
    <li>{{ ui.termsContent.restrictionsList2[lang] | default("Attempt to scrape, copy, or redistribute our calculator code") }}</li>
    <li>{{ ui.termsContent.restrictionsList3[lang] | default("Attempt to bypass security or access controls on our services") }}</li>
    <li>{{ ui.termsContent.restrictionsList4[lang] | default("Use automated bots to access our services excessively") }}</li>
</ul>

<h2>{{ uiTerms.s5Title }}</h2>
<p>{{ ui.termsContent.intellectualPropertyText[lang] | default("CalcKit, including all code, design, and content, is the intellectual property of its creators. The name 'CalcKit' and associated branding are protected.") }}</p>

<h2>{{ uiTerms.s6Title }}</h2>
<p>{{ ui.termsContent.disclaimerText[lang] | default("CalcKit is provided 'as is' without warranty of any kind. We do not guarantee that the calculators will be error-free, uninterrupted, or accurate for your specific situation.") }}</p>

<h2>{{ uiTerms.s7Title }}</h2>
<p>{{ ui.termsContent.liabilityText[lang] | default("To the maximum extent permitted by law, CalcKit shall not be liable for any indirect, incidental, or consequential damages arising from the use of our calculators or website.") }}</p>

<h2>{{ uiTerms.s8Title }}</h2>
<p>{{ ui.termsContent.changesText[lang] | default("We may update these terms from time to time. Continued use of the website after changes constitutes acceptance of the new terms.") }}</p>

<h2>{{ uiTerms.s9Title }}</h2>
<p>{{ ui.termsContent.contactText[lang] | default("For questions about these terms, contact us at:") }} <a href="mailto:worthit.tuliai@gmail.com">worthit.tuliai@gmail.com</a></p>
