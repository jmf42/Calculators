---
pagination:
  data: collections.articlePages
  size: 1
  alias: pageData
permalink: "{{ pageData.lang }}/{{ pageData.slug }}/index.html"
---
<!DOCTYPE html>
<html lang="{{ pageData.lang }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ pageData.title }} | {{ site.name }}</title>
    <meta name="description" content="{{ pageData.metaDescription }}">
    <meta name="robots" content="index, follow">
    <link rel="canonical" href="{{ pageData.canonicalUrl | canonicalUrl }}">
    
    <!-- Hreflang -->
    {%- if pageData.alternates %}
    {%- for langCode, href in pageData.alternates %}
    <link rel="alternate" hreflang="{{ langCode }}" href="{{ href | canonicalUrl }}">
    {%- endfor %}
    <link rel="alternate" hreflang="x-default" href="{{ (pageData.alternates[site.defaultLang]) | canonicalUrl }}">
    {%- endif %}

    <link rel="icon" type="image/png" href="/assets/images/logo_calculator.png">

    <!-- Preconnect to improve Core Web Vitals -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    <link rel="stylesheet" href="/assets/css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">

    <!-- Article Schema -->
    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "Article",
        "headline": {{ pageData.title | jsonify | safe }},
        "description": {{ pageData.metaDescription | jsonify | safe }},
        "url": {{ (pageData.canonicalUrl | canonicalUrl) | jsonify | safe }},
        "datePublished": {{ site.buildDate | jsonify | safe }},
        "dateModified": {{ site.buildDate | jsonify | safe }},
        "author": {
            "@type": "Person",
            "name": {{ site.author.name | jsonify | safe }},
            "jobTitle": {{ site.author.jobTitle | jsonify | safe }}
        },
        "publisher": {
            "@type": "Organization",
            "name": {{ site.name | jsonify | safe }},
            "url": {{ site.url | jsonify | safe }},
            "logo": {
                "@type": "ImageObject",
                "url": {{ (site.url + "/assets/images/logo.png") | jsonify | safe }}
            }
        },
        "mainEntityOfPage": {
            "@type": "WebPage",
            "@id": {{ (pageData.canonicalUrl | canonicalUrl) | jsonify | safe }}
        }
    }
    </script>

    {% include "components/language-redirect.njk" %}
</head>
<body>
    <nav class="nav">
        <div class="container">
            <a href="{% if pageData.lang == 'en' %}/{% else %}/{{ pageData.lang }}{% endif %}" class="logo">
                <img class="logo-mark" src="/assets/images/logo_calculator.png" alt="" aria-hidden="true" style="width: 32px; height: 32px;">
                <span class="logo-type">{{ site.name }}</span>
            </a>
            <div class="nav-links">
                <a href="{% if pageData.lang == 'en' %}/{% else %}/{{ pageData.lang }}{% endif %}" class="nav-btn">
                     ← {{ ui.nav[pageData.lang].home }}
                </a>
            </div>
        </div>
    </nav>

    <article class="hero page-hero">
        <div class="container content-narrow">
            <h1>{{ pageData.title }}</h1>
            <p class="lead">{{ pageData.metaDescription }}</p>
        </div>
    </article>

    <section class="content-section">
        <div class="container content-narrow">
            <div class="prose guide-content">
                {{ pageData.content | safe }}
            </div>
            
            <div style="margin-top: 60px; padding-top: 40px; border-top: 1px solid var(--border);">
                 <p style="color: var(--text-muted); font-size: 14px;">
                    {{ ui.articleMeta.writtenBy[pageData.lang] }} <strong>{{ site.author.name }}</strong> •
                    {{ ui.whyTrust[pageData.lang].dataLabel }} <a href="/{{ pageData.lang }}/about">{{ ui.about.methodologyTitle[pageData.lang] }}</a>
                 </p>
            </div>
        </div>
    </section>

    <!-- AdSense Slot (Optional) -->
    <!-- <div class="container ad-container" style="margin: 2rem auto; text-align: center;">...</div> -->

    <footer class="footer">
        <div class="container">
            <p style="text-align: center; color: var(--text-muted);">© {{ site.year }} {{ site.name }}.</p>
        </div>
    </footer>
    {% include "components/consent-loader.njk" %}
    {% include "components/cookie-banner.njk" %}
</body>
</html>
